<% max = config[:other_articles_max].to_i %>
<% older_only ||= false %>
<div class="other-articles">
  <div class="older">
    <ul>
      <% n_older_articles(max, reference_item).each do |item| %>
        <li>
          <a href="<%= route_path(item) %>" title="<%= item[:excerpt] || '' %>">
            <%= item[:title] %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
  
  <div class="newer">
    <% if !older_only %>
    <ul>
      <% n_newer_articles(max, reference_item).reverse.each do |item| %>
        <li>
          <a href="<%= route_path(item) %>" title="<% item[:excerpt] || '' %>">
            <%= item[:title] %>
          </a>
        </li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>