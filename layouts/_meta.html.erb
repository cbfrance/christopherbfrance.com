<% if item[:kind] == 'article' %>
  <div class="meta">
    <ul class="tags">
      <li class="<%= pretty_time(item[:created_at]) %>">
        <% if item[:tags] %>
          <% item[:tags].sort.each do |tag| %>
            <a href="<%= "/tags/#{tag}" %>/" class='tag'>
              <%= tag %>
            </a>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
<% end %>